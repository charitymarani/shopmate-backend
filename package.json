{
  "name": "shopmate-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "start:dev": "NODE_ENV=development  DEBUG=log  nodemon --exec babel-node src/index.js",
    "lint": "node_modules/.bin/eslint ./src",
    "pretest": "NODE_ENV=test yarn db:migrate",
    "test": "jest --no-cache --detectOpenHandles --runInBand --forceExit",
    "db:seed": "node_modules/.bin/sequelize db:seed:all $* --seeders-path src/database/seeders/default",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:rollback": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:rollmigrate": "yarn db:rollback && yarn db:migrate && yarn db:seed"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "commitplease": "^3.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.8",
    "nsp": "^3.2.1",
    "sequelize-cli": "^5.5.0",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "bugsnag": "^2.4.3",
    "cloudinary": "^1.11.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "express-validator": "^5.3.0",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.3.0",
    "jws-jwk": "^0.1.4",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "mailgun-js": "^0.21.0",
    "moment": "^2.29.2",
    "morgan": "~1.9.1",
    "moxios": "^0.4.0",
    "multer": "^1.4.0",
    "ngrok": "^3.1.0",
    "node-cron": "^2.0.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "pug": "^2.0.4",
    "sequelize": "^5.10.1",
    "shortid": "^2.2.13",
    "socket.io": "^2.1.1",
    "yarn": "^1.17.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js",
      "<rootDir>/src/middlewares/index.js",
      "<rootDir>/src/modules/travelChecklist/CloudinaryDeletion.js"
    ],
    "testEnvironment": "node"
  },
  "commitplease": {
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "chore"
    ],
    "scope": "\\S+.*"
  },
  "engines": {
    "yarn": "1.12.x"
  }
}
